<Window x:Class="TaskAct4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskAct4"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="button_AddTask" Content="Add Task" HorizontalAlignment="Left" Margin="238,222,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="216,86,0,0" TextWrapping="Wrap" Text="{Binding TaskName, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120" />
        <Label x:Name="label" Content="{Binding TaskNameView}" HorizontalAlignment="Left" Margin="278,138,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
